{
  "editor.cursorStyle": "line",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.suggestSelection": "first",
  "editor.tabSize": 4,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "emmet.includeLanguages": {
    "postcss": "css"
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "[rust]": {
    "editor.tabSize": 4
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "tailwindCSS.experimental.classRegex": [
    ["tv\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  // "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
  "workbench.iconTheme": "material-icon-theme",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.accessibilitySupport": "off",
  "vim.statusBarColorControl": false,
  "vim.neovimUseConfigFile": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-n>"],
      "after": ["g", "b"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<esc>"]
    },
    {
      "before": ["<C-k>"],
      "commands": [{ "command": "editor.action.insertCursorAbove" }]
    },
    {
      "before": ["<C-j>"],
      "commands": [{ "command": "editor.action.insertCursorBelow" }]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    }
  ],
  "keyboard.dispatch": "code",
  "window.restoreFullscreen": true,
  "window.newWindowDimensions": "maximized",
  "vim.neovimPath": "/opt/homebrew/bin/nvim",
  "vim.neovimConfigPath": "~/dotfiles/nvim/init.lua",
  "vim.enableNeovim": true,
  "vim.surround": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  // saving cpu usage
  "files.exclude": {
    "/.git": true,
    "/.DS_Store": true,
    "/node_modules": true,
    "/node_modules/": true
  },
  "search.exclude": {
    "/node_modules": true
  },
  "files.watcherExclude": {
    "/node_modules/": true
  },
  "vyper.command": "arch -x86_64 vyper",
  "yaml.schemas": {},
  "typescript.tsserver.log": "off",
  "redhat.telemetry.enabled": false,
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "solidity.telemetry": true,
  "[python]": {
    "editor.formatOnType": true
  },
  "scss.lint.unknownAtRules": "ignore",
  "hediet.vscode-drawio.theme": "min",
  "editor.inlineSuggest.enabled": true,
  "workbench.colorTheme": "GitHub Dark",
  "[yaml]": {
    "editor.tabSize": 2
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[bats]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "haskell.manageHLS": "GHCup",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "cSpell.enableFiletypes": ["solidity"],
  "cSpell.userWords": ["calldatacopy"],
  "diffEditor.hideUnchangedRegions.enabled": true,
  "leetcode-problem-rating.workspaceFolder": "",
  "[javascript][javascriptreact][typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "gitlens.views.searchAndCompare.files.layout": "list",
  "vsicons.dontShowNewVersionMessage": true,
  "githubPullRequests.pullBranch": "never",
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "githubPullRequests.fileListLayout": "tree"
}
